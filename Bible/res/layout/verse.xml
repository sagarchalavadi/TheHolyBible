<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5971AD" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/back"
            style="@style/TextAppearance.Sherlock.Light.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back" />
        <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#FF0000"
        android:layout_below="@id/back" />

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1" >

            <ImageView
                android:id="@+id/prevVerse"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5sp"
                android:contentDescription="@string/content_description2"
                android:src="@drawable/previous" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dip"
                android:textColor="#EEAD0E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/nextVerse"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5sp"
                android:contentDescription="@string/content_description1"
                android:gravity="right"
                android:src="@drawable/next" />
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#FF0000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" >

            <TextView
                android:id="@+id/verse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EEAD0E"
                android:textSize="18sp"
                android:textStyle="bold" />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ZoomControls
            android:id="@+id/zoomcontrols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/back" />
    </RelativeLayout>

</RelativeLayout>